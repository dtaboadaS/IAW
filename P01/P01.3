#Muestra los n√∫meros del 1 al 10. Hazlo con distintas estructuras repetitivas

#Utilizando "foreach/range" ----------------------------------------------------------------------------------------------------------------------------

<!DOCTYPE html>
<html>
<body>

<?php
foreach (range(1, 10) as $x) {
    echo $x . "<br>";
}
?>

</body>
</html>

#Utilizando "for" -------------------------------------------------------------------------------------------------------------------------------------

<!DOCTYPE html>
<html>
<body>

<?php
for ($x = 1; $x <= 10; $x++) {
    echo $x . "<br>";
}
?>

</body>
</html>

#Utilizando "while" -------------------------------------------------------------------------------------------------------------------------------------

<!DOCTYPE html>
<html>
<body>

<?php
$x = 1;
while ($x <= 10) {
    echo $x . "<br>";
    $x++;
}
?>

</body>
</html>
