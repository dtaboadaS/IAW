# Busca si un elemento se encuentro e informa de ello

<!DOCTYPE html>
<html>
<body>

<?php
function mostrarResultadosOrdenados($array, $buscar) {
    sort($array);
    $contador = 0;
    foreach ($array as $elemento) {
        echo $elemento . "<br>";
        $contador++;
    }
    
     echo "Total de resultados: " . $contador . "<br>";
     
     if (in_array($buscar, $array)) {
        echo "El elemento buscado '" . $buscar . "' se encuentra en el array. <br>";
    } else {
        echo "El elemento buscado '" . $buscar . "' no se encuentra en el array. <br>";
    }
}

$motos = array("Yamaha", "Honda", "Kawasaki", "Ducati");

mostrarResultadosOrdenados($motos, "Ducati");
echo "<br>";
$coches = array("Renault", "Opel", "Seat", "Audi");

mostrarResultadosOrdenados($coches, "Prueba");
echo "<br>";
?> 

</body>
</html>
