#Muestra los n√∫meros del 1 al 10. Hazlo con distintas estructuras repetitivas

#Utilizando "foreach/range" ----------------------------------------------------------------------------------------------------------------------------

<!DOCTYPE html>
<html>
<body>

<?php
foreach (range(1, 10) as $i) {
    echo $i . "<br>";
}
?>

</body>
</html>

#Utilizando "for" -------------------------------------------------------------------------------------------------------------------------------------

<!DOCTYPE html>
<html>
<body>

<?php
for ($i = 1; $i <= 10; $i++) {
    echo $i . "<br>";
}
?>

</body>
</html>

#Utilizando "while" -------------------------------------------------------------------------------------------------------------------------------------

<!DOCTYPE html>
<html>
<body>

<?php
$i = 1;
while ($i <= 10) {
    echo $i . "<br>";
    $i++;
}
?>

</body>
</html>
